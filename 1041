#include <bits/stdc++.h>

using namespace std;

int main()
{float a,b,c,d,e;
double avg1,avg2;
cin>>a>>b>>c>>d;

avg1=((a*2)+(b*3)+(c*4)+(d*1))/10;
cout<<"Media: "<<fixed<<setprecision(1)<<avg1<<endl;
if(avg1>=7.0)

{

    cout<<"Aluno aprovado."<<endl;
}
else if(avg1<5.0)
{
    cout<<"Aluno reprovado."<<endl;
}
else if(avg1>=5.0 && avg1<=6.9)
{
    cout<<"Aluno em exame."<<endl;
    cin>>e;
    cout<<"Nota do exame: "<<e<<endl;
    avg2=(avg1+e)/2;


    if(avg2>=5.0)
    {
        cout<<"Aluno aprovado."<<endl;
    }
    else
    {

        cout<<"Aluno reprovado."<<endl;
    }
    cout<<"Media final: "<<avg2<<endl;




}










    return 0;
}
