#include <bits/stdc++.h>

using namespace std;

int main()
{


   int i,x,y,n,j,k;
   cin>>n;
   for(i=1;i<=n;i++)
   {
     cin>>x>>y;
     k=0;
     if(x>=y)
     {
         for(j=y+1;j<x;j++)
         {
             if(j%2!=0)
             {

                 k=k+j;
             }
         }
         cout<<k<<endl;


     }
     if(x<y)
     {
         for(j=x+1;j<y;j++)
         {
             if(j%2!=0)
             {

                 k=k+j;
             }
         }
         cout<<k<<endl;


     }

   }
    return 0;
}
